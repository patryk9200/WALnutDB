      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <None Update=".\logo.png">
      <Pack>True</Pack>
      <PackagePath>.\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Documentation\EN\" />
    <Folder Include="Documentation\PL\" />
  </ItemGroup>

</Project>
